---
import Layout from '../layouts/Layout.astro';
---

<Layout title="2-Passenger Golf Cart Rentals Ocala FL | Compact Gas Golf Carts | Ocala Golf Carts">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-emerald-600 to-emerald-800 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        2-Passenger Golf Cart Rentals in Ocala
      </h1>
      <p class="text-xl text-emerald-100 max-w-2xl mx-auto">
        Reliable and easy to drive, this 2-passenger gas golf cart is perfect for golf courses, resorts, events, and private properties in Ocala, Florida. Enjoy comfortable seating, smooth performance, and extended range for all-day use.
      </p>
    </div>
  </section>

  <!-- 2-Passenger Details -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Cart Information -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">2-Passenger Gas Golf Cart Rental in Ocala</h2>
          
          <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
            <div class="text-center mb-8">
              <div class="text-4xl font-bold text-emerald-600 mb-2">Call for Pricing</div>
              <p class="text-gray-600">Available for short-term or long-term rentals</p>
            </div>
            
            <p class="text-lg text-gray-700 mb-6 leading-relaxed">
              Reliable and easy to drive, this 2-passenger gas golf cart is perfect for golf courses, resorts, events, and private properties in Ocala, Florida. Enjoy comfortable seating, smooth performance, and extended range for all-day use.
            </p>
            
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Key Features</h3>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-emerald-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                2-passenger capacity with comfortable seating
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-emerald-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Gas-powered engine for extended range
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-emerald-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Smooth performance and easy handling
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-emerald-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Weather protection canopy
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-emerald-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Perfect for all-day use
              </li>
            </ul>
          </div>
          
          <div class="bg-emerald-50 border border-emerald-200 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-emerald-900 mb-3">Perfect For</h3>
            <ul class="text-emerald-800 space-y-2">
              <li>• Golf courses and resorts</li>
              <li>• Special events and celebrations</li>
              <li>• Private properties and communities</li>
              <li>• Couples and intimate outings</li>
              <li>• Short-term and long-term rentals</li>
            </ul>
          </div>
        </div>
        
        <!-- Cart Images Gallery with Slideshow -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">2-Passenger Golf Cart Gallery in Ocala</h2>
          
          <!-- Slideshow Gallery -->
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <!-- Main Slideshow Image -->
            <div class="relative h-96 overflow-hidden">
              <div class="absolute top-4 left-4 bg-emerald-600 text-white px-3 py-1 rounded-full text-sm font-semibold z-10">2-Passenger</div>
              <img id="slideshow-main" src="/golf cart images/2 seater/5376297149081645384.jpg" alt="2-Passenger Golf Cart Gallery" class="w-full h-full object-cover transition-opacity duration-500" />
            </div>
            
            <!-- Navigation Arrows -->
            <button id="prev-btn" class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white/80 hover:bg-white text-emerald-600 p-2 rounded-full shadow-lg transition-all z-10">
              <i class="fa-solid fa-chevron-left"></i>
            </button>
            <button id="next-btn" class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white/80 hover:bg-white text-emerald-600 p-2 rounded-full shadow-lg transition-all z-10">
              <i class="fa-solid fa-chevron-right"></i>
            </button>
            
            <!-- Thumbnail Strip -->
            <div class="p-4 bg-gray-50 border-t">
              <div class="flex gap-2 overflow-x-auto" id="thumbnails">
                <button class="flex-shrink-0 thumbnail-btn active" data-index="0">
                  <img src="/golf cart images/2 seater/5376297149081645384.jpg" alt="Thumbnail" class="w-20 h-20 object-cover rounded-lg border-2 border-emerald-600 opacity-100" />
                </button>
                <button class="flex-shrink-0 thumbnail-btn" data-index="1">
                  <img src="/golf cart images/2 seater/2053877108174006411.jpg" alt="Thumbnail" class="w-20 h-20 object-cover rounded-lg border-2 border-transparent opacity-60 hover:opacity-80" />
                </button>
                <button class="flex-shrink-0 thumbnail-btn" data-index="2">
                  <img src="/golf cart images/2 seater/2020895730177759096.jpg" alt="Thumbnail" class="w-20 h-20 object-cover rounded-lg border-2 border-transparent opacity-60 hover:opacity-80" />
                </button>
                <button class="flex-shrink-0 thumbnail-btn" data-index="3">
                  <img src="/golf cart images/2 seater/1933077952967162494.jpg" alt="Thumbnail" class="w-20 h-20 object-cover rounded-lg border-2 border-transparent opacity-60 hover:opacity-80" />
                </button>
                <button class="flex-shrink-0 thumbnail-btn" data-index="4">
                  <img src="/golf cart images/2 seater/8236133676716185003.jpg" alt="Thumbnail" class="w-20 h-20 object-cover rounded-lg border-2 border-transparent opacity-60 hover:opacity-80" />
                </button>
              </div>
            </div>
          </div>
          
          <div class="bg-white p-6" id="image-info">
            <h3 class="text-xl font-semibold text-gray-900 mb-3" id="image-title">Club Car Tempo Model</h3>
            <p class="text-gray-600 mb-4" id="image-desc">Modern white Club Car golf cart with LED headlights, comfortable tan seating, and reliable gas-powered performance.</p>
          </div>

          <!-- Specifications -->
          <div class="mt-6 bg-gray-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Specifications</h3>
            <div class="grid grid-cols-2 gap-4 text-sm">
              <div class="bg-white p-3 rounded-lg">
                <div class="font-semibold text-gray-900">Capacity</div>
                <div class="text-gray-600">2 passengers</div>
              </div>
              <div class="bg-white p-3 rounded-lg">
                <div class="font-semibold text-gray-900">Engine</div>
                <div class="text-gray-600">Gas-powered</div>
              </div>
              <div class="bg-white p-3 rounded-lg">
                <div class="font-semibold text-gray-900">Brand</div>
                <div class="text-gray-600">Club Car Tempo</div>
              </div>
              <div class="bg-white p-3 rounded-lg">
                <div class="font-semibold text-gray-900">Range</div>
                <div class="text-gray-600">Extended range</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Rental Options -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Available Rental Periods</h2>
        <p class="text-xl text-gray-600">Choose the rental period that works best for your needs</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-emerald-50 border border-emerald-200 rounded-lg p-6 text-center">
          <h3 class="text-xl font-semibold text-emerald-900 mb-2">Daily</h3>
          <p class="text-gray-600 mb-4">Perfect for day trips and short adventures</p>
          <a href="/3-day-rental" class="inline-block bg-emerald-600 text-white px-6 py-2 rounded-lg hover:bg-emerald-700 transition-colors">
            View Details
          </a>
        </div>
        
        <div class="bg-emerald-50 border border-emerald-200 rounded-lg p-6 text-center">
          <h3 class="text-xl font-semibold text-emerald-900 mb-2">Weekly</h3>
          <p class="text-gray-600 mb-4">Great value for extended stays</p>
          <a href="/weekly-rental" class="inline-block bg-emerald-600 text-white px-6 py-2 rounded-lg hover:bg-emerald-700 transition-colors">
            View Details
          </a>
        </div>
        
        <div class="bg-emerald-50 border border-emerald-200 rounded-lg p-6 text-center">
          <h3 class="text-xl font-semibold text-emerald-900 mb-2">Monthly</h3>
          <p class="text-gray-600 mb-4">Best rates for long-term use</p>
          <a href="/monthly-rental" class="inline-block bg-emerald-600 text-white px-6 py-2 rounded-lg hover:bg-emerald-700 transition-colors">
            View Details
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-emerald-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Rent a 2-Passenger Golf Cart in Ocala Today
      </h2>
      <p class="text-xl text-emerald-100 mb-8">
        Perfect for golf courses, resorts, events, and private properties in Ocala, Florida. Available for short-term or long-term rentals. Call us for availability and pricing.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="tel:+13527801526" class="bg-white text-emerald-600 px-8 py-4 rounded-full font-semibold hover:bg-gray-100 transition-colors duration-300">
          <i class="fa-solid fa-phone mr-2"></i>
          Call (352) 780-1526
        </a>
        <a href="/contact" class="border-2 border-white text-white px-8 py-4 rounded-full font-semibold hover:bg-white hover:text-emerald-600 transition-colors duration-300">
          <i class="fa-solid fa-envelope mr-2"></i>
          Send Message
        </a>
      </div>
    </div>
  </section>

  <script>
    // Slideshow functionality
    document.addEventListener('DOMContentLoaded', function() {
      const images = [
        {
          src: '/golf cart images/2 seater/5376297149081645384.jpg',
          alt: 'Club Car Tempo 2-Passenger Gas Golf Cart',
          title: 'Club Car Tempo Model',
          description: 'Modern white Club Car golf cart with LED headlights, comfortable tan seating, and reliable gas-powered performance.'
        },
        {
          src: '/golf cart images/2 seater/2053877108174006411.jpg',
          alt: '2-Passenger Golf Cart Front View',
          title: 'Front View',
          description: 'LED headlights and Club Car branding for safe nighttime operation.'
        },
        {
          src: '/golf cart images/2 seater/2020895730177759096.jpg',
          alt: '2-Passenger Golf Cart Side View',
          title: 'Side View',
          description: 'Comfortable tan seating and Tempo model styling for a premium experience.'
        },
        {
          src: '/golf cart images/2 seater/1933077952967162494.jpg',
          alt: '2-Passenger Golf Cart Interior',
          title: 'Interior',
          description: 'Spacious interior with comfortable seating for two passengers.'
        },
        {
          src: '/golf cart images/2 seater/8236133676716185003.jpg',
          alt: '2-Passenger Golf Cart Rear View',
          title: 'Rear View',
          description: 'Compact and efficient design perfect for tight spaces and easy maneuverability.'
        }
      ];
      
      let currentSlide = 0;
      const mainImg = document.getElementById('slideshow-main');
      const titleEl = document.getElementById('image-title');
      const descEl = document.getElementById('image-desc');
      const thumbnails = document.querySelectorAll('.thumbnail-btn');
      
      function updateSlide(index: number) {
        currentSlide = index;
        const image = images[currentSlide];
        if (mainImg instanceof HTMLImageElement) {
          mainImg.src = image.src;
          mainImg.alt = image.alt;
        }
        if (titleEl) titleEl.textContent = image.title;
        if (descEl) descEl.textContent = image.description;
        
        // Update thumbnails
        thumbnails.forEach((btn, i) => {
          const img = btn.querySelector('img');
          if (img) {
            if (i === currentSlide) {
              btn.classList.add('active');
              img.classList.remove('border-transparent', 'opacity-60');
              img.classList.add('border-emerald-600', 'opacity-100');
            } else {
              btn.classList.remove('active');
              img.classList.remove('border-emerald-600', 'opacity-100');
              img.classList.add('border-transparent', 'opacity-60');
            }
          }
        });
      }
      
      // Next button
      const nextBtn = document.getElementById('next-btn');
      if (nextBtn) {
        nextBtn.addEventListener('click', () => {
          updateSlide((currentSlide + 1) % images.length);
        });
      }
      
      // Previous button
      const prevBtn = document.getElementById('prev-btn');
      if (prevBtn) {
        prevBtn.addEventListener('click', () => {
          updateSlide((currentSlide - 1 + images.length) % images.length);
        });
      }
      
      // Thumbnail clicks
      thumbnails.forEach((btn, index) => {
        btn.addEventListener('click', () => {
          updateSlide(index);
        });
      });
    });
  </script>
</Layout>
