---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Graduation Party Golf Cart Rentals Ocala | Graduation Transportation" description="Celebrate graduation in style with golf cart rentals in Ocala! High school & college grad parties, senior week & open houses. May-June availability. Book early!">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-indigo-600 via-blue-600 to-purple-700 text-white py-16 relative overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="relative max-w-6xl mx-auto px-6 text-center">
