---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Event Golf Cart Rentals | WEC, Weddings, Halloween & More | Ocala Golf Cart Rental">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-emerald-600 to-emerald-800 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Golf Cart Rentals for Ocala Events
      </h1>
      <p class="text-xl text-emerald-100 max-w-3xl mx-auto">
        Premium golf cart rentals for WEC events, weddings, Halloween celebrations, horse shows, and all your special occasions in Ocala, Florida.
      </p>
    </div>
  </section>

  <!-- WEC Events Section -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-block bg-emerald-100 text-emerald-800 px-4 py-2 rounded-full text-sm font-semibold mb-4">World Equestrian Center</div>
          <h2 class="text-4xl font-bold text-emerald-900 mb-6">WEC Event Rentals</h2>
          <p class="text-lg text-gray-600 mb-6">
            Navigate the World Equestrian Center with ease during horse shows, competitions, and events. Our golf carts provide convenient transportation around the expansive venue.
          </p>
          <div class="space-y-4 mb-8">
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Perfect for horse show weekends</span>
            </div>
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Easy navigation between arenas</span>
            </div>
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Professional service for competitors</span>
            </div>
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Multi-day event packages available</span>
            </div>
          </div>
          <a href="/contact" class="bg-gradient-to-r from-emerald-600 to-emerald-700 text-white px-8 py-4 rounded-lg font-semibold hover:from-emerald-700 hover:to-emerald-800 transform hover:scale-105 transition-all duration-300 shadow-lg">
            Get WEC Quote
          </a>
        </div>
        <div class="bg-gradient-to-br from-emerald-100 to-emerald-200 rounded-2xl p-8 h-96 flex items-center justify-center">
          <div class="text-center">
            <i class="fa-solid fa-horse-head text-emerald-600 text-6xl mb-4"></i>
            <h3 class="text-2xl font-bold text-emerald-900 mb-2">World Equestrian Center</h3>
            <p class="text-emerald-700">Premier equestrian venue</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Wedding Rentals Section -->
  <section class="py-16 bg-gradient-to-br from-emerald-50 to-white">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="bg-gradient-to-br from-pink-100 to-pink-200 rounded-2xl p-8 h-96 flex items-center justify-center order-2 lg:order-1">
          <div class="text-center">
            <i class="fa-solid fa-heart text-pink-600 text-6xl mb-4"></i>
            <h3 class="text-2xl font-bold text-pink-900 mb-2">Wedding Transportation</h3>
            <p class="text-pink-700">Elegant & romantic</p>
          </div>
        </div>
        <div class="order-1 lg:order-2">
          <div class="inline-block bg-pink-100 text-pink-800 px-4 py-2 rounded-full text-sm font-semibold mb-4">Wedding Rentals</div>
          <h2 class="text-4xl font-bold text-emerald-900 mb-6">Wedding Golf Cart Rentals</h2>
          <p class="text-lg text-gray-600 mb-6">
            Make your special day unforgettable with our elegant golf cart rentals. Perfect for ceremonies, receptions, and guest transportation at wedding venues throughout Ocala.
          </p>
          <div class="space-y-4 mb-8">
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Elegant transportation for guests</span>
            </div>
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Photo opportunities and memories</span>
            </div>
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Venue navigation assistance</span>
            </div>
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Special wedding day packages</span>
            </div>
          </div>
          <a href="/contact" class="bg-gradient-to-r from-emerald-600 to-emerald-700 text-white px-8 py-4 rounded-lg font-semibold hover:from-emerald-700 hover:to-emerald-800 transform hover:scale-105 transition-all duration-300 shadow-lg">
            Plan Your Wedding
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Halloween Events Section -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-block bg-orange-100 text-orange-800 px-4 py-2 rounded-full text-sm font-semibold mb-4">Halloween Specials</div>
          <h2 class="text-4xl font-bold text-emerald-900 mb-6">Halloween Golf Cart Rentals</h2>
          <p class="text-lg text-gray-600 mb-6">
            Spooktacular golf cart rentals for Halloween events! Perfect for haunted tours, trick-or-treating, Halloween parties, and October celebrations throughout Ocala.
          </p>
          <div class="space-y-4 mb-8">
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Perfect for Halloween events</span>
            </div>
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Haunted tour transportation</span>
            </div>
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Trick-or-treat neighborhood tours</span>
            </div>
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">October special pricing</span>
            </div>
          </div>
          <a href="/contact" class="bg-gradient-to-r from-emerald-600 to-emerald-700 text-white px-8 py-4 rounded-lg font-semibold hover:from-emerald-700 hover:to-emerald-800 transform hover:scale-105 transition-all duration-300 shadow-lg">
            Book Halloween Fun
          </a>
        </div>
        <div class="bg-gradient-to-br from-orange-100 to-orange-200 rounded-2xl p-8 h-96 flex items-center justify-center">
          <div class="text-center">
            <i class="fa-solid fa-ghost text-orange-600 text-6xl mb-4"></i>
            <h3 class="text-2xl font-bold text-orange-900 mb-2">Halloween Events</h3>
            <p class="text-orange-700">Spooky & fun celebrations</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Horse Show Rentals Section -->
  <section class="py-16 bg-gradient-to-br from-emerald-50 to-white">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="bg-gradient-to-br from-emerald-100 to-emerald-200 rounded-2xl p-8 h-96 flex items-center justify-center order-2 lg:order-1">
          <div class="text-center">
            <i class="fa-solid fa-trophy text-emerald-600 text-6xl mb-4"></i>
            <h3 class="text-2xl font-bold text-emerald-900 mb-2">Horse Shows</h3>
            <p class="text-emerald-700">Competition & events</p>
          </div>
        </div>
        <div class="order-1 lg:order-2">
          <div class="inline-block bg-emerald-100 text-emerald-800 px-4 py-2 rounded-full text-sm font-semibold mb-4">Horse Show Rentals</div>
          <h2 class="text-4xl font-bold text-emerald-900 mb-6">Horse Show Transportation</h2>
          <p class="text-lg text-gray-600 mb-6">
            Essential transportation for horse show participants, spectators, and vendors. Navigate large venues easily with our reliable golf cart rentals.
          </p>
          <div class="space-y-4 mb-8">
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Show participant transportation</span>
            </div>
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Vendor and spectator mobility</span>
            </div>
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Multi-day event packages</span>
            </div>
            <div class="flex items-center">
              <i class="fa-solid fa-check-circle text-emerald-600 mr-3"></i>
              <span class="text-gray-700">Equipment and gear transport</span>
            </div>
          </div>
          <a href="/contact" class="bg-gradient-to-r from-emerald-600 to-emerald-700 text-white px-8 py-4 rounded-lg font-semibold hover:from-emerald-700 hover:to-emerald-800 transform hover:scale-105 transition-all duration-300 shadow-lg">
            Book Horse Show Rental
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Event Packages Section -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-16">
        <span class="inline-block bg-emerald-100 text-emerald-800 px-4 py-2 rounded-full text-sm font-semibold mb-4">Event Packages</span>
        <h2 class="text-4xl font-bold text-emerald-900 mb-6">Specialized Event Packages</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">Tailored golf cart rental packages designed specifically for Ocala's major events and celebrations</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- WEC Package -->
        <div class="bg-white border border-emerald-200 rounded-2xl p-8 hover:shadow-xl transition-all duration-300">
          <div class="text-center mb-6">
            <i class="fa-solid fa-horse-head text-emerald-600 text-4xl mb-4"></i>
            <h3 class="text-xl font-bold text-emerald-900">WEC Event Package</h3>
          </div>
          <ul class="space-y-3 mb-6 text-gray-600">
            <li class="flex items-center">
              <i class="fa-solid fa-check text-emerald-600 mr-2"></i>
              Multi-day rental discounts
            </li>
            <li class="flex items-center">
              <i class="fa-solid fa-check text-emerald-600 mr-2"></i>
              Event venue delivery
            </li>
            <li class="flex items-center">
              <i class="fa-solid fa-check text-emerald-600 mr-2"></i>
              Extended hours support
            </li>
            <li class="flex items-center">
              <i class="fa-solid fa-check text-emerald-600 mr-2"></i>
              Competitor priority booking
            </li>
          </ul>
          <div class="text-center">
            <span class="text-xl font-bold text-emerald-700">Call for Pricing</span>
          </div>
        </div>

        <!-- Wedding Package -->
        <div class="bg-white border border-pink-200 rounded-2xl p-8 hover:shadow-xl transition-all duration-300">
          <div class="text-center mb-6">
            <i class="fa-solid fa-heart text-pink-600 text-4xl mb-4"></i>
            <h3 class="text-xl font-bold text-emerald-900">Wedding Package</h3>
          </div>
          <ul class="space-y-3 mb-6 text-gray-600">
            <li class="flex items-center">
              <i class="fa-solid fa-check text-emerald-600 mr-2"></i>
              Decorated carts available
            </li>
            <li class="flex items-center">
              <i class="fa-solid fa-check text-emerald-600 mr-2"></i>
              Full day rental
            </li>
            <li class="flex items-center">
              <i class="fa-solid fa-check text-emerald-600 mr-2"></i>
              Professional drivers
            </li>
            <li class="flex items-center">
              <i class="fa-solid fa-check text-emerald-600 mr-2"></i>
              Photo session support
            </li>
          </ul>
          <div class="text-center">
            <span class="text-xl font-bold text-emerald-700">Call for Pricing</span>
          </div>
        </div>

        <!-- Halloween Package -->
        <div class="bg-white border border-orange-200 rounded-2xl p-8 hover:shadow-xl transition-all duration-300">
          <div class="text-center mb-6">
            <i class="fa-solid fa-ghost text-orange-600 text-4xl mb-4"></i>
            <h3 class="text-xl font-bold text-emerald-900">Halloween Package</h3>
          </div>
          <ul class="space-y-3 mb-6 text-gray-600">
            <li class="flex items-center">
              <i class="fa-solid fa-check text-emerald-600 mr-2"></i>
              Gas-powered reliability
            </li>
            <li class="flex items-center">
              <i class="fa-solid fa-check text-emerald-600 mr-2"></i>
              Evening rental hours
            </li>
            <li class="flex items-center">
              <i class="fa-solid fa-check text-emerald-600 mr-2"></i>
              Safety lighting package
            </li>
            <li class="flex items-center">
              <i class="fa-solid fa-check text-emerald-600 mr-2"></i>
              October special pricing
            </li>
          </ul>
          <div class="text-center">
            <span class="text-xl font-bold text-emerald-700">Call for Pricing</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-br from-emerald-600 to-emerald-800 text-white">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Ready to Plan Your Event?
      </h2>
      <p class="text-xl text-emerald-100 mb-8">
        Contact us today to discuss your specific event needs and get a customized quote for your Ocala event.
      </p>
      <a href="/contact" class="bg-white text-emerald-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transform hover:scale-105 transition-all duration-300 shadow-lg">
        Get Event Quote
      </a>
    </div>
  </section>
</Layout>
