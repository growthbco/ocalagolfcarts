  <script>
    // Slideshow functionality for utility
    document.addEventListener('DOMContentLoaded', function() {
      const images = [
        {
          src: '/golf cart images/2 seater/8585318701482008037.jpg',
          alt: 'Utility Golf Cart',
          title: 'Work-Ready Design',
          description: 'Built for work and versatility with a durable cargo bed and powerful gas engine. Perfect for commercial applications, farms, events, and festivals.'
        },
        {
          src: '/golf cart images/2 seater/5063143251268795851.jpg',
          alt: 'Utility Golf Cart Front View',
          title: 'Front View',
          description: 'Durable cargo bed and gas engine for reliable utility transportation.'
        },
        {
          src: '/golf cart images/2 seater/7889926003978922071.jpg',
          alt: 'Utility Golf Cart Side View',
          title: 'Side View',
          description: 'Versatile work design perfect for hauling supplies and equipment.'
        }
      ];
      
      let currentSlide = 0;
      const mainImg = document.getElementById('slideshow-main-utility');
      const titleEl = document.getElementById('image-title-utility');
      const descEl = document.getElementById('image-desc-utility');
      const thumbnails = document.querySelectorAll('#thumbnails-utility .thumbnail-btn');
      
      function updateSlide(index: number) {
        currentSlide = index;
        const image = images[currentSlide];
        if (mainImg instanceof HTMLImageElement) {
          mainImg.src = image.src;
          mainImg.alt = image.alt;
        }
        if (titleEl) titleEl.textContent = image.title;
        if (descEl) descEl.textContent = image.description;
        
        thumbnails.forEach((btn, i) => {
          const img = btn.querySelector('img');
          if (img) {
            if (i === currentSlide) {
              btn.classList.add('active');
              img.classList.remove('border-transparent', 'opacity-60');
              img.classList.add('border-emerald-600', 'opacity-100');
            } else {
              btn.classList.remove('active');
              img.classList.remove('border-emerald-600', 'opacity-100');
              img.classList.add('border-transparent', 'opacity-60');
            }
          }
        });
      }
      
      const nextBtn = document.getElementById('next-btn-utility');
      if (nextBtn) {
        nextBtn.addEventListener('click', () => {
          updateSlide((currentSlide + 1) % images.length);
        });
      }
      
      const prevBtn = document.getElementById('prev-btn-utility');
      if (prevBtn) {
        prevBtn.addEventListener('click', () => {
          updateSlide((currentSlide - 1 + images.length) % images.length);
        });
      }
      
      thumbnails.forEach((btn, index) => {
        btn.addEventListener('click', () => {
          updateSlide(index);
        });
      });
    });
  </script>
