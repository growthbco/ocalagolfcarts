  <script>
    // Slideshow functionality for deluxe
    document.addEventListener('DOMContentLoaded', function() {
      const images = [
        {
          src: '/golf cart images/2 seater/7715525047639465467.jpg',
          alt: '2-Passenger Deluxe Golf Cart - Fully Enclosed',
          title: 'Fully Enclosed Design',
          description: 'Stay comfortable in any weather with side curtains and a fully enclosed design. Perfect for rainy or cooler days.'
        },
        {
          src: '/golf cart images/2 seater/5656112864340902193.jpg',
          alt: '2-Passenger Deluxe Golf Cart',
          title: 'Deluxe Features',
          description: 'Premium deluxe golf cart with enhanced comfort and weather protection for the ultimate riding experience.'
        }
      ];
      
      let currentSlide = 0;
      const mainImg = document.getElementById('slideshow-main-deluxe');
      const titleEl = document.getElementById('image-title-deluxe');
      const descEl = document.getElementById('image-desc-deluxe');
      const thumbnails = document.querySelectorAll('#thumbnails-deluxe .thumbnail-btn');
      
      function updateSlide(index: number) {
        currentSlide = index;
        const image = images[currentSlide];
        if (mainImg instanceof HTMLImageElement) {
          mainImg.src = image.src;
          mainImg.alt = image.alt;
        }
        if (titleEl) titleEl.textContent = image.title;
        if (descEl) descEl.textContent = image.description;
        
        // Update thumbnails
        thumbnails.forEach((btn, i) => {
          const img = btn.querySelector('img');
          if (img) {
            if (i === currentSlide) {
              btn.classList.add('active');
              img.classList.remove('border-transparent', 'opacity-60');
              img.classList.add('border-emerald-600', 'opacity-100');
            } else {
              btn.classList.remove('active');
              img.classList.remove('border-emerald-600', 'opacity-100');
              img.classList.add('border-transparent', 'opacity-60');
            }
          }
        });
      }
      
      // Next button
      const nextBtn = document.getElementById('next-btn-deluxe');
      if (nextBtn) {
        nextBtn.addEventListener('click', () => {
          updateSlide((currentSlide + 1) % images.length);
        });
      }
      
      // Previous button
      const prevBtn = document.getElementById('prev-btn-deluxe');
      if (prevBtn) {
        prevBtn.addEventListener('click', () => {
          updateSlide((currentSlide - 1 + images.length) % images.length);
        });
      }
      
      // Thumbnail clicks
      thumbnails.forEach((btn, index) => {
        btn.addEventListener('click', () => {
          updateSlide(index);
        });
      });
    });
  </script>
</Layout>
