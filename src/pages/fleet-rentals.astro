  <script>
    // Fleet slideshow functionality
    document.addEventListener('DOMContentLoaded', function() {
      const fleetImages = [
        { src: '/golf cart images/2 seater/Fleets/IMAGE 2025-11-02 11:44:56.jpg', alt: 'Large Golf Cart Fleet - Aerial View 1' },
        { src: '/golf cart images/2 seater/Fleets/IMAGE 2025-11-02 11:44:57.jpg', alt: 'Large Golf Cart Fleet - Aerial View 2' },
        { src: '/golf cart images/2 seater/Fleets/IMAGE 2025-11-02 11:44:59.jpg', alt: 'Large Golf Cart Fleet - Aerial View 3' },
        { src: '/golf cart images/2 seater/Fleets/IMAGE 2025-11-02 11:45:00.jpg', alt: 'Large Golf Cart Fleet - Aerial View 4' },
        { src: '/golf cart images/2 seater/Fleets/IMAGE 2025-11-02 11:45:02.jpg', alt: 'Large Golf Cart Fleet - Aerial View 5' },
        { src: '/golf cart images/2 seater/Fleets/IMAGE 2025-11-02 11:45:03.jpg', alt: 'Large Golf Cart Fleet - Aerial View 6' },
        { src: '/golf cart images/2 seater/Fleets/IMAGE 2025-11-02 11:45:04.jpg', alt: 'Large Golf Cart Fleet - Aerial View 7' },
        { src: '/golf cart images/2 seater/Fleets/IMAGE 2025-11-02 11:45:05.jpg', alt: 'Large Golf Cart Fleet - Aerial View 8' },
        { src: '/golf cart images/2 seater/Fleets/IMAGE 2025-11-02 11:45:06.jpg', alt: 'Large Golf Cart Fleet - Aerial View 9' }
      ];
      
      let currentFleetSlide = 0;
      const mainFleetImg = document.getElementById('fleet-slideshow-main');
      const fleetThumbnails = document.querySelectorAll('.fleet-thumbnail-btn');
      
      function updateFleetSlide(index: number) {
        currentFleetSlide = index;
        const image = fleetImages[currentFleetSlide];
        if (mainFleetImg instanceof HTMLImageElement) {
          mainFleetImg.src = image.src;
          mainFleetImg.alt = image.alt;
        }
        
        // Update thumbnails
        fleetThumbnails.forEach((btn, i) => {
          const img = btn.querySelector('img');
          if (img) {
            if (i === currentFleetSlide) {
              btn.classList.add('active');
              img.classList.remove('border-transparent', 'opacity-60');
              img.classList.add('border-emerald-600', 'opacity-100');
            } else {
              btn.classList.remove('active');
              img.classList.remove('border-emerald-600', 'opacity-100');
              img.classList.add('border-transparent', 'opacity-60');
            }
          }
        });
      }
      
      // Next button
      const fleetNextBtn = document.getElementById('fleet-next-btn');
      if (fleetNextBtn) {
        fleetNextBtn.addEventListener('click', () => {
          updateFleetSlide((currentFleetSlide + 1) % fleetImages.length);
        });
      }
      
      // Previous button
      const fleetPrevBtn = document.getElementById('fleet-prev-btn');
      if (fleetPrevBtn) {
        fleetPrevBtn.addEventListener('click', () => {
          updateFleetSlide((currentFleetSlide - 1 + fleetImages.length) % fleetImages.length);
        });
      }
      
      // Thumbnail clicks
      fleetThumbnails.forEach((btn, index) => {
        btn.addEventListener('click', () => {
          updateFleetSlide(index);
        });
      });
    });
  </script>
